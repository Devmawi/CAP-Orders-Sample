{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./srv", 
        "baseUrl": "./",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "esModuleInterop": true
    },
    "include": [
        "./srv/**/*"
    ]
}